/* pages/shoplist/index.wxss */
page {
    background-color: #f2f4f5;
}
.ShopListItem {
    display: flex;
    width: 100%;
    flex-direction: column;
    box-sizing: border-box;
    background-color: #ffffff;
    margin-bottom: 10px;
    height: 150px;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 10px;
}
.ShopListItem .Name {
    font-weight: bold;
    margin-bottom: 10px;
    font-size: 16px;
}
.ShopListItem .Info {
    font-size: 8px;
    color: #d3d3d3;
    margin-bottom: 5px;
}