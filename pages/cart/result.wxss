/* pages/cart/result.wxss */
page {
    background-color: #f2f4f5;
    padding-bottom: 200rpx;
    font-size: 28rpx;
}

.Result {
    margin: 150rpx 40rpx 0 40rpx;
    background-color: #fff;
    border-radius: 20rpx;
    box-sizing: border-box;
    padding: 100rpx 20rpx 40rpx 20rpx;
    position: relative;
}

.Result .Icon {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    top: -60rpx;
    left: calc((100vw - 200rpx) * 0.5);
    background-color: #d3d3d3;
}

.Result .Title {
    font-size: 30rpx;
    font-weight: bold;
    width: 100%;
    text-align: center;
    margin-bottom: 40rpx;
}

.Result .Item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.Result .Item:last-child {
    margin-bottom: 60rpx;
}

.Result .Value {
    color: #d3d3d3;
}

.Result .Name {
    color: #333333;
}

.Result .RePay {
    background-color: #FA5151;
    width: 100%;
    height: 70rpx;
    border-radius: 35rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 20rpx;
}

.Result .ToHome {
    border: solid 0.5px #FA5151;
    width: 100%;
    height: 70rpx;
    border-radius: 35rpx;
    color: #FA5151;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 20rpx;
}