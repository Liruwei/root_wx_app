/* pages/goods/index.wxss */
page {
  padding-bottom: 176rpx;
  background-color: #f2f4f5;
}

.topbar {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  display: flex;
}

.topbar-close {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background-color: #ededed;
  border-color: 20rpx;
  margin-left: 30rpx;
}

.goods-image {
  height: 250px;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.goods-info {
  background-color: #ffffff;
  margin: 0 30rpx 20rpx 30rpx;
  padding: 30rpx 30rpx 30rpx 30rpx;
  box-shadow: 0 10rpx 30rpx -10rpx #ededed;
  border-radius: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.goods-info-name {
  font-size: 30rpx;
  color: #ededed;
  margin-bottom: 20rpx;
}

.goods-info-info {
  font-size: 24rpx;
  color: #ededed;
}

.goods-detail {
  background-color: #ffffff;
  margin: 0 30rpx 20rpx 30rpx;
  padding: 30rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0 10rpx 30rpx -10rpx #ededed;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.goods-detail-title {
  font-size: 24rpx;
  color: #ededed;
  margin-bottom: 20rpx;
}

.goods-detail-value {
  height: 300px;
}

.toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 176rpx;
  padding: 0 30rpx 0 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}

.toolbar-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}

.toolbar-top-left {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.toolbar-top-price {
  font-size: 30rpx;
  font-weight: bold;
  color: #ededed;
  margin-right: 20rpx;
}

.toolbar-top-oldprice {
  font-size: 24rpx;
  color: #ededed;
  text-decoration: line-through;
}

.toolbar-top-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.toolbar-top-del {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: solid 2rpx #ededed;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: #ededed;
}

.toolbar-top-add {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
  background-color: #ededed;
}

.toolbar-top-num {
  font-size: 30rpx;
  color: #ededed;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
}

.toolbar-bottom {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
}

.toolbar-bottom-now {
  height: 60rpx;
  width: 180rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  border: solid 1px #ededed;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ededed;
  margin-right: 30rpx;
}

.toolbar-bottom-cart {
  height: 60rpx;
  width: 180rpx;
  border-radius: 30rpx;
  background-color: #ededed;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}











