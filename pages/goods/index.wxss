/* pages/goods/index.wxss */
page {
  padding-bottom: 176rpx;
  background-color: #f6f9f9;
}

.topbar {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  display: flex;
}

.topbar-close {
  width: 44rpx;
  height: 44rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.goods-image {
  background-color: #ffffff;
  margin-bottom: 20rpx;
  height: 400rpx;
}

.goods-swiper {
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #7289ff80;
}

.goods-swiper-image {
  height: 400rpx;
}


.goods-info {
  background-color: #ffffff;
  margin: 0 16rpx 20rpx 16rpx;
  padding: 30rpx 30rpx 30rpx 30rpx;
  /* box-shadow: 0 10rpx 30rpx -10rpx #ededed; */
  border-radius: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.goods-info-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #303232;
  margin-bottom: 20rpx;
}

.goods-info-info {
  font-size: 24rpx;
  color: #999999;
}

.goods-detail {
  background-color: #ffffff;
  margin: 0 16rpx 20rpx 16rpx;
  padding: 30rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  /* box-shadow: 0 10rpx 30rpx -10rpx #ededed; */
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.goods-detail-title {
  font-size: 24rpx;
  /* color: #ededed; */
  color: #303232;
  margin-bottom: 20rpx;
}

.goods-detail-value {
  height: 300px;
}

.toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 176rpx;
  padding: 0 30rpx 0 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  box-shadow: -10rpx 10rpx 30rpx -10rpx #ededed;
}

.toolbar-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}

.toolbar-top-left {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.toolbar-top-price {
  font-size: 30rpx;
  font-weight: bold;
  color: #eb5940;
  margin-right: 20rpx;
}

.toolbar-top-oldprice {
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
}

.toolbar-top-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.toolbar-top-del {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: solid 2rpx #f4721e;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: #f4721e;
}

.toolbar-top-add {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
  background-color: #f4721e;
}

.toolbar-top-num {
  font-size: 24rpx;
  color: #303232;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
}

.toolbar-bottom {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
}

.toolbar-bottom-now {
  height: 70rpx;
  padding: 0 40rpx 0 40rpx;
  border-radius: 35rpx;
  border: solid 2rpx #33c900;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #33c900;
  margin-right: 30rpx;
  font-size: 24rpx;
}

.toolbar-bottom-cart {
  height: 70rpx;
  padding: 0 40rpx 0 40rpx;
  border-radius: 35rpx;
  background-color: #33c900;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}

.goods-info-types {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.goods-info-group {
  display: flex;
  flex-direction: row;
}

.goods-info-key {
  margin-right: 20rpx;
  white-space: nowrap;
  min-width: 100rpx;
  font-size: 24rpx;
  color: #303232;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.goods-info-valparent {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
}

.goods-info-val {
  padding: 0 30rpx 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: normal;
  height: 50rpx;
  border-radius: 25rpx;
  margin: 0 10rpx 10rpx 0;
  background-color: #f6f9f9;
  color: #303232;
  font-size: 24rpx;
}

.goods-info-valselect {
  border: solid 1px #7289ff;
  background-color: #7289ff10;
  color: #7289ff;
}











