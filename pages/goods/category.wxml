<!--pages/goods/category.wxml-->
<import src='/pages/template/footer.wxml' />
<view class="CategoryHeader">
  <view class="InputBg">
    <input placeholder="搜索商品名称" class="Input" bindinput="onInput"  confirm-type="search" bindblur='onSearch'/>
  </view>
</view>
<view wx:if='{{goods.length > 0}}' class='HomeGoodsList'>
  <view wx:for='{{goods}}' wx:key='id' class="Item" catchtap="onGoodsTap" data-item='{{item}}'>
    <image class="Image" src="{{item.photos[0]}}"></image>
    <text class="Name">{{item.name}}</text>
    <view class="Footer">
      <text class="Money">¥{{item.showPrice}}</text>
      <image class="Icon" src="/icons/buy.png"></image> 
    </view>
  </view>
</view>
<block wx:if='{{loadingMore}}'>
	<template is="footer_loading" />
</block>
<block wx:if='{{!(goods && goods.length > 0)}}'>
	<view class="GlobalEmpty">
		<image src="/icons/empty.png" class="GlobalEmptyIcon"></image>
		<view class="GlobalEmptyText">暂无数据</view>
	</view>
</block>