/* pages/home/index.wxss */
@import '/pages/template/footer.wxss';

page {
    background-color: #f2f4f5;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #2c2c2c;
}

.HomeBox {
    position: relative;
}

.HomeBox .HomeBoxProgress {
    position: absolute;
    left: calc((100vw - 140rpx) * 0.5);
    bottom: 10rpx;
    width: 100rpx;
}

.HomeBanner {
    margin: 20rpx 20rpx 0 20rpx;
    width: calc(100vw - 40rpx);
    background-color: #ffffff;
    height: calc((100vw - 40rpx) * 2 / 5);
    border-radius: 10rpx;
    overflow: hidden;
    padding-bottom: 0;
    -webkit-mask-image: -webkit-radial-gradient(white, black);
}

.HomeBanner .Item {
    height: 300rpx;
}

.HomeBanner .A {
    background-color: lightgray;
}

.HomeBanner .B {
    background-color: lightgray;
}

.HomeBanner .C {
    background-color: lightgray;
}


.HomeCategory {
    background-color: #ffffff;
    margin: 20rpx 20rpx 0 20rpx;
    width: calc(100vw - 40rpx);
    height: 200rpx;
    border-radius: 10rpx;
    display: flex;
    flex-direction: row;
    overflow: hidden;
}

.HomeCategory .Scroll {
    white-space: nowrap;
}

.HomeCategory .Item {
    display: inline-block;
    width: 100rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.HomeCategory .Item:first-child {
    margin-left: 20rpx;
}

.HomeCategory .Item .Content {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.HomeCategory .Item .Content .Icon {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 10rpx;
    background-color: lightgray;
    box-sizing: border-box;
    overflow: hidden;
}

.HomeCategory .Item .Content .Text {
    font-size: 20rpx;
}

.HomeCategory .Item:last-child {
    margin-right: 0;
}

.HomeGoodsList {
    margin: 20rpx 20rpx 0 20rpx;
    width: calc(100vw - 40rpx);
    padding-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.HomeGoodsList .Item {
    /* height: calc((100vw - 60rpx) * 0.5 + 200rpx); */
    width: calc((100vw - 60rpx) * 0.5);
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
    box-sizing: border-box;
}

.HomeGoodsList .Item:nth-child(2n) {
    margin-right: 0;
}

.HomeGoodsList .Item .Image {
    width: calc((100vw - 60rpx) * 0.5);
    height: calc((100vw - 60rpx) * 0.5);
    background-color: lightgray;
    border-radius: 10rpx;
}

.HomeGoodsList .Item .Name {
    margin: 10rpx 10rpx;
    line-height: 38rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.HomeGoodsList .Item .Footer {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 100rpx;
    width: 100%;
    margin: 0 0 10rpx 0;
}

.HomeGoodsList .Item .Footer .Money {
    font-weight: bold;
    color: #FA5151;
    margin-left: 10rpx;
    font-size: 34rpx;
}

.HomeGoodsList .Item .Footer .Icon {
    margin-right: 10rpx;
    width: 50rpx;
    height: 50rpx;
}