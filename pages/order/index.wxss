/* pages/order/index.wxss */
@import "../template/order_item/index.wxss";

page {
  background-color: #f2f4f5;
  padding-bottom: 20rpx;
}

.topbar {
  background-color: #ededed;
  margin: 0 30rpx 0 30rpx;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 44rpx;
  height: 88rpx;
}

.item {
  width: calc((100vw - 68rpx) / 3.0);
  height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: medium;
  color: #ffffff;
}

.select {
  background-color: #ffffff;
  color: #ededed;
  border-radius: 49.5rpx;
}

