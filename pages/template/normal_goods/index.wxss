.normal_goods {
  display: flex;
  margin: 20rpx 20rpx 40rpx 20rpx;
  height: 180rpx;
  overflow: hidden;
}

.normal_goods-left {
  width:  180rpx;
  height: 180rpx;
  background-color: #7289ff80;
  margin-right: 20rpx;
  border-radius: 20rpx;
}

.normal_goods-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-right: 20rpx;
}

.normal_goods-info {
  font-size: 24rpx;
  margin-top: 16rpx;
  color: #999999;
}

.normal_goods-right .normal_goods-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #303232;
}

.normal_goods-right .normal_goods-price {
  font-size: 30rpx;
  font-weight: bold;
  color: #eb5940;
}

.normal_goods-oldprice {
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
  align-self: flex-end;
  margin-left: 10rpx;
}

.normal_goods-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}


