.cart_item {
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0rpx 20rpx 0rpx;
}

.cart_item-radio {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 80rpx;
}

.cart_item-radiodot {
  width: 40rpx;
  height: 40rpx;
  border: solid 1rpx #ededed;
  border-radius: 20rpx;
}

.cart_item-radio-select {
  background-color: #ededed;
}

.cart_item-img {
  width: 180rpx;
  height: 180rpx;
  background-color: #ededed;
  border-radius: 20rpx;
}

.cart_item-right {
  display: flex;
  flex: 1;
  height: 100%;
  flex-direction: column;
  padding: 0 20rpx;
  justify-content: space-between;
  box-sizing: border-box;
}

.cart_item-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.cart_item-column {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.cart_item-control {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 150rpx;
}

.cart_item-btn {
  height: 50rpx;
  width: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart_item-delbtn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: solid 2rpx #f4721e;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: #f4721e;
}

.cart_item-addbtn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
  background-color: #f4721e;
}

.cart_item-num {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #303232;
  font-weight: bold;
  height: 50rpx;
  width: 50rpx;
}

.cart_item-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #303232;
}

.cart_item-info {
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
}

.cart_item-price {
  display: flex;
  align-items: center;
  flex-direction: row;
}

.cart_item-now {
  font-size: 30rpx;
  font-weight: bold;
  color: #eb5940;
}

.cart_item-old {
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
  align-self: flex-end;
  margin-left: 10rpx;
}









