.cart_item {
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.cart_item-radio {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 80rpx;
}

.cart_item-radiodot {
  width: 40rpx;
  height: 40rpx;
  border: solid 1rpx lightgray;
  border-radius: 20rpx;
}

.cart_item-img {
  width: 150rpx;
  height: 150rpx;
  background-color: #ededed;
  border-radius: 10rpx;
}

.cart_item-center {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.cart_item-right {
  width: 150rpx;
  display: flex;
  height: 100%;
  flex-direction: row;
  align-items: flex-end;
}

.cart_item-btn {
  height: 50rpx;
  width: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart_item-delbtn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: solid 1px blueviolet;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: blueviolet;
}

.cart_item-addbtn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: white;
  background-color: blueviolet;
}

.cart_item-num {
  font-size: 24rpx;
  text-align: center;
  height: 50rpx;
  width: 50rpx;
}









