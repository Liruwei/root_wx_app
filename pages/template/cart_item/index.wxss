.cart_item {
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.cart_item-radio {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 80rpx;
}

.cart_item-radiodot {
  width: 40rpx;
  height: 40rpx;
  border: solid 1rpx #ededed;
  border-radius: 20rpx;
}

.cart_item-img {
  width: 150rpx;
  height: 150rpx;
  background-color: #ededed;
  border-radius: 10rpx;
}

.cart_item-right {
  display: flex;
  flex: 1;
  height: 100%;
  flex-direction: column;
  padding: 0 20rpx;
  justify-content: space-between;
  box-sizing: border-box;
}

.cart_item-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.cart_item-column {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.cart_item-control {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 150rpx;
}

.cart_item-btn {
  height: 50rpx;
  width: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart_item-delbtn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: solid 2rpx #ededed;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: #ededed;
}

.cart_item-addbtn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
  background-color: #ededed;
}

.cart_item-num {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  height: 50rpx;
  width: 50rpx;
}

.cart_item-name {
  font-size: medium;
  font-weight: bold;
  color: #ededed;
}

.cart_item-info {
  font-size: 20rpx;
  color: #ededed;
}

.cart_item-price {
  display: flex;
  align-items: center;
  flex-direction: row;
}

.cart_item-now {
  font-size: large;
  color: #ededed;
}

.cart_item-old {
  font-size: small;
  color: #ededed;
  text-decoration: line-through;
  margin-left: 10rpx;
}









