.order_item {
  box-shadow: 0 10rpx 30rpx -10rpx #ededed;
  background-color: #ffffff;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
  flex: 1;
  overflow: hidden;
  border-radius: 10rpx;
}

.order_item-top {
  flex: 1;
  height: 60rpx;
  border-bottom: solid 1px #f2f4f5;
  padding: 10rpx 0 10rpx 0;
  margin-left: 10rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order_item-topleft {
  display: flex;
  align-items: center;
  justify-content: center;
}

.order_item-tag {
  background-color: #ededed;
  font-size: small;
  color: #ffffff;
  padding: 5rpx 20rpx 5rpx 20rpx;
  break-after: 5rpx;
}

.order_item-status {
  font-size: small;
  color: #ededed;
}

.order_item-center {
  flex: 1;
  display: flex;
  flex-direction: row;
  padding: 20rpx 0 20rpx 0;
}

.order_item-img {
  height: 100rpx;
  width: 100rpx;
  border-bottom: 10rpx;
  background-color: #ededed;
  margin-left: 10rpx;
}

.order_item-centerright {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.order_item-row {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order_item-name {
  font-size: medium;
  font-weight: bold;
  color: #ededed;
}

.order_item-num {
  font-size: small;
  color: #ededed;
}

.order_item-info {
  font-size: small;
  color: #ededed;
}

.order_item-footer {
  flex: 1;
  border-top: solid 1px #f2f4f5;
  padding: 10rpx 0 20rpx 0;
  margin-left: 10rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order_item-time {
  font-size: small;
  color: #ededed;
}

.order_item-total {
  font-size: small;
  color: #ededed;
}